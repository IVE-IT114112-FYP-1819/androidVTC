<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dennischiu.vtc_androidproject">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Finger.Function_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Status" />
        <activity android:name=".TimePicker.MainTimePicker" />

        <receiver android:name=".TimePicker.AlertReceiver" />

        <activity
            android:name=".Second_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Status" />
        <activity
            android:name=".Third_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Status" />

        <activity
            android:name=".Information_setting"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Info" />
    </application>

</manifest>